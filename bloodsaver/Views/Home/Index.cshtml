@model bloodsaver.Models.registration

@{
    Layout = null;
}

<link href="~/Styles/StyleSheet1.css" rel="stylesheet" />

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

<head>
    <title></title>
    <script src="~/Jquery/JavaScript1.js"></script>
</head>



<!DOCTYPE html>

        <html>
        <head>
            <meta name="viewport" content="width=device-width" />
            <title>Index</title>
        </head>
        <body>
            <div class="form">
                <hr />
                <h1 style="color:red">Registration.</h1>
                <p>Get Register , Feel Free It's safe and secure.</p>
                <hr />
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)

                    

                        <div id="naaam">

                           <b>Name</b>
                            
                        </div>
                        <div class="tooltip">
                           
                                @Html.EditorFor(model => model.name)
                                @Html.ValidationMessageFor(model => model.name)
                                <span class="tooltiptext">Enter Your Name </span>
                           
                                 <span id="showingerrors"></span>
                            <span id="jbsj"></span>
                        </div>

                        <div class="editor-label">
                            <b>National Id Card</b>
                            @*@Html.LabelFor(model => model.cnic)*@
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.cnic)
                            @Html.ValidationMessageFor(model => model.cnic)
                            <span id="cniccheck"></span>
                        </div>


                        <div class="editor-label">
                            <b>Email</b>
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.email, "Email", new { attr = "emailattr" })
                            @Html.ValidationMessageFor(model => model.email)
                            <span id="emailspan"></span>
                        </div>



                        <div class="editor-label">
                            <b>Password</b>
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.password, "password", new { attr = "passwordattr" })
                            @*@Html.PasswordFor(model => model.password)*@
                            @Html.ValidationMessageFor(model => model.password)
                           
                            <span id="paswordspan"></span>
                        </div>

                        <div class="editor-label">
                            <b>Gender</b>
                        </div>
                        <div class="editor-field" >
                            @Html.DropDownList("Gender", new List<SelectListItem>
          { new SelectListItem { Text = "Male", Value = "Male" },
              new SelectListItem { Text = "Female", Value = "Female" }
          }, "Select Gender")
                            <span id="gen"></span>
                        </div>

                        <div class="editor-label">
                           <b>Status</b>
                        </div>
    <div class="editor-field" id="gn">
       <label id="sta"> Donner:</label>@Html.RadioButton("status", "Donner")
        <br />
        <label>    Accepter</label> : @Html.RadioButton("status", "Accepter")


    </div>

                        <div class="editor-label">
                            <b>Blood Group</b>
                        </div>
                        <div class="editor-field" id="gns">
                            @Html.DropDownList("bloodgroup", new List<SelectListItem>
          { new SelectListItem { Text = "A", Value = "A" },
              new SelectListItem { Text = "B", Value = "B" },
               new SelectListItem { Text = "O", Value = "O" }

          }, "Select Your Blood Group")
                        </div>

                        <div class="editor-label">
                            <b>Cell Number</b>
                        </div>
                        <div class="editor-field">
                            @Html.EditorFor(model => model.cellno)
                            @Html.ValidationMessageFor(model => model.cellno)

                        </div>

                        <div class="editor-label">
                            <b>Status Cell</b>
                        </div>
                        <div class="editor-field">
                            <div id="s">
                                Public:   <span id="p">  @Html.RadioButton("statuscell", "Public")</span>
                                <br />
                                Private:@Html.RadioButton("statuscell", "Private")
                            </div>


                        </div>

                        <div class="editor-label">
                           <b>Country</b>
                        </div>

                        <div class="editor-field">

                            @Html.DropDownList("country", "Select")

                        </div>
                        <div class="editor-label">
                           <b>City</b>
                        </div>
                        <div class="editor-field">
                            @Html.DropDownList("city", "Select")
                        </div>

                        <p>
                            <input class="button" type="submit" value="Create" />
                        </p>
                
                    <br />
                    <div id="v"></div>


                }
            </div>

          
          
        </body>
            
            

            
</html>
